<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HistoryQuest.Views.ResultPage"
             BackgroundColor="#F4F4F4"
             Title="Kết Quả Bài Thi">

    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center" HorizontalOptions="Center">

        <!-- Tiêu đề -->
        <Label Text="Kết Quả Bài Thi" 
               FontSize="28" 
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#3B5998" />

        <!-- Điểm số -->
        <Label Text="Điểm: 90/100" 
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#4CAF50" />

        <!-- Đánh giá -->
        <Label Text="Xuất sắc!" 
               FontSize="20"
               HorizontalOptions="Center"
               TextColor="Black" />

        <!-- Nút quay lại -->
        <Button Text="Quay Lại Trang Chủ" 
                BackgroundColor="#4CAF50"
                TextColor="White"
                FontAttributes="Bold"
                HeightRequest="50"
                CornerRadius="10"
                HorizontalOptions="FillAndExpand"
                Clicked="OnBackToHomeClicked" />

    </VerticalStackLayout>
</ContentPage>
